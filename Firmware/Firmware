import board

from kmk.kmk_keyboard import KMKKeyboard
from kmk.scanners.keypad import KeysScanner
from kmk.keys import KC
from kmk.modules.macros import Macros, Press, Release, Tap

keyboard = KMKKeyboard()

# Módulo de macros
macros = Macros()
keyboard.modules.append(macros)

# Pines XIAO RP2040 (botones entre estos pines y GND)
PINS = [board.D0, board.D1, board.D2, board.D3]

keyboard.matrix = KeysScanner(
    pins=PINS,
    value_when_pressed=False,  # LOW cuando pulsado
)

# === MACROS PARA WINDOWS 10 ===

# Botón 1 (D0): Nueva pestaña (Chrome/Edge/Firefox): CTRL + T
NEW_TAB = KC.MACRO(
    Press(KC.LCTRL),
    Tap(KC.T),
    Release(KC.LCTRL),
)

# Botón 2 (D1): Captura pantalla (guarda en Imágenes\Capturas)
SCREENSHOT = KC.MACRO(
    Press(KC.LGUI),
    Tap(KC.PSCR),
    Release(KC.LGUI),
)

# Botón 3 (D2): Abrir Steam (anclado en barra tareas posición 1)
STEAM = KC.MACRO(
    Press(KC.LGUI),
    Tap(KC.N1),
    Release(KC.LGUI),
)

# Botón 4 (D3): Abrir Discord (anclado posición 2)
DISCORD = KC.MACRO(
    Press(KC.LGUI),
    Tap(KC.N2),
    Release(KC.LGUI),
)

keyboard.keymap = [
    [
        NEW_TAB,    # D0
        SCREENSHOT, # D1  
        STEAM,      # D2
        DISCORD,    # D3
    ]
]

if __name__ == '__main__':
    keyboard.go()
